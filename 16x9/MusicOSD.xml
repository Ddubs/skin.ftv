<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- musicosd -->
	<defaultcontrol always="true">11</defaultcontrol>
	<controls>
		<control type="group">
			<animation effect="fade" start="100" end="0" time="200" condition="Window.IsVisible(visualisationpresetlist) | Window.IsVisible(addonsettings) | Window.IsVisible(selectdialog)">Conditional</animation>
			<control type="image">
				<width>1920</width>
				<height>210</height>
				<texture border="1">osd/mask_top.png</texture>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<width>1920</width>
				<height>980</height>
				<texture border="1">osd/mask_bottom.png</texture>
			</control>
			<control type="grouplist">
				<left>20</left>
				<top>64</top>
				<width>1880</width>
				<height>50</height>
				<align>center</align>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>
				<!--  Artist title -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>Med40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[MusicPlayer.Title]</label>
				</control>
			</control>
			<!--  Song title -->
			<control type="label">
				<left>20</left>
				<top>127</top>
				<width>1880</width>
				<height>40</height>
				<align>center</align>
				<font>Light26</font>
				<textcolor>fffe8e8e8</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, / ,]</label>
			</control>
			<!--  Progress bar -->
			<control id="99" type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.Progress</info>
				<texturebg border="4">osd/progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="4">osd/progress_bar.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<control type="grouplist">
				<left>92</left>
				<bottom>38</bottom>
				<width>800</width>
				<height>40</height>
				<itemgap>4</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<!--  Current position -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>fff3f3f3</textcolor>
					<label>$VAR[PlayerTime]</label>
				</control>
				<!--  Divider -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>ff696969</textcolor>
					<label>/</label>
				</control>
				<!--  Total length -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>ff696969</textcolor>
					<label>$VAR[PlayerDuration]</label>
				</control>
			</control>
			<!--  Current time -->
			<control type="label">
				<right>92</right>
				<bottom>45</bottom>
				<width>800</width>
				<height>30</height>
				<font>Reg27</font>
				<align>right</align>
				<textcolor>fff3f3f3</textcolor>
				<label>$INFO[System.Time]</label>
			</control>
			<!-- Options -->
			<control type="grouplist">
				<right>92</right>
				<bottom>128</bottom>
				<width>600</width>
				<height>600</height>
				<align>right</align>
				<itemgap>0</itemgap>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<orientation>vertical</orientation>
				<!-- Lyrics -->
				<control type="button" id="9">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>24013</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>Close</onclick>
					<onclick condition="IsEmpty(Skin.String(LyricAddon))">Skin.SetAddon(LyricAddon,xbmc.python.lyrics)</onclick>
					<onclick condition="!IsEmpty(Skin.String(LyricAddon))">XBMC.RunScript($INFO[Skin.String(LyricAddon)])</onclick>
				</control>
				<!-- Playlist -->
				<control type="button" id="10">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>559</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>Close</onclick>
					<onclick>ActivateWindow(MusicPlaylist)</onclick>
				</control>
				<!-- Repeat -->
				<control type="button" id="7">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>$LOCALIZE[486]$INFO[Playlist.Repeat, : ]</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>PlayerControl(Repeat)</onclick>
				</control>
				<!-- Random -->
				<control type="togglebutton" id="8">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>$LOCALIZE[590]$INFO[Playlist.Random, : ]</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>PlayerControl(Random)</onclick>
				</control>
				<!-- Visualisation -->
				<control type="button" id="500">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>12006</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
				</control>
				<!-- Visualisation presets list -->
				<control type="button" id="12">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>$LOCALIZE[31047]</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>ActivateWindow(122)</onclick>
				</control>
				<!-- Visualisation settings -->
				<control type="button" id="11">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<label>$LOCALIZE[250] $LOCALIZE[21417]</label>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>Addon.Default.OpenSettings(xbmc.player.musicviz)</onclick>
				</control>
			</control>
		</control>
	</controls>
</window>